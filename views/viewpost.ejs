<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">

    <div class="nav flex justify-between items-center px-4 border-b-[0.5px] border-zinc-400 pb-2">
      <h3 class="text-lg">
        <%= user.username %>
      </h3>
      <div class="icons flex gap-5">
        <div class="relative inline-block text-left">
          <div>
            <button type="button"
              class="inline-flex w-full justify-center gap-x-1.5 rounded-md px-1 py-2 text-sm font-medium text-white-900 shadow-sm "
              id="menu-button" aria-expanded="true" aria-haspopup="true">
              <i class="text-[1.4rem] ri-menu-line"></i>
            </button>
          </div>

          <div
            class="absolute right-0 z-10 mt-2 w-32 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
            id="dropdown-menu" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
              <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                id="menu-item-0">Settings</a>
              <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                id="menu-item-1">Privacy</a>
              <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                id="menu-item-2">Your Actiity</a>
              <form action="/logout">
                <button type="submit" class="text-gray-700 block w-full px-4 py-2 text-left text-sm" role="menuitem"
                  tabindex="-1" id="menu-item-3">Logout</button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="posts mb-20">

      <div class="post mt-5 w-full min-h-[50vh]">
        <a href="/visit/profile/<%= post.user._id %>">
          <div class="title px-4 flex items-center gap-2">
            <div class="w-[8vw] h-[8vw] bg-sky-100 rounded-full overflow-hidden"><img
                src="\images\uploads\<%= post.user.profileimage %>" alt="profileimage"
                class="w-full h-full object-cover"></div>
            <h4 class="text-sm">
              <%= post.user.username %>
            </h4>
          </div>
        </a>
        <div class="w-full h- 96 mt-4 bg-sky-100 overflow-hidden"><img
            src="\images\uploads\<%= post.postimage %>" alt="post" class="h-full w-full object-cover"></div>
        <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
          <div class="flex gap-3 mt-2">
            <a href="/like/post/<%= post._id %>">
              <% if(post.likes.indexOf(user._id)===-1){ %>
                <i class="ri-heart-3-line"></i>
                <% } else { %>
                  <i class="ri-heart-3-fill text-red-500"></i>
                  <% } %>
            </a>
            <i class="ri-chat-3-line"></i>
            <i class="ri-share-circle-line"></i>
          </div>
          <i class="ri-bookmark-line"></i>
        </div>
        <h3 class="px-4 mt-2 text-sm leading-none tracking-tight">
          <%= post.likes.length %> Likes
        </h3>
        <h2 class="text-white font-light text-sm mt-2 px-4">
          <span class="font-semibold  pr-2">
            <%= post.user.username %>
          </span>
          <%=post.caption %>
        </h2>
        <h6 class="text-xs opacity-30 px-4 mt-1"><%= post.createddate.toLocaleDateString() %></h6>

      </div>
    </div>

  </div>

  <% include ./partials/footer.ejs %>